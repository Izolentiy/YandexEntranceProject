<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EntranceProject" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/light_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_black</item>
        <item name="colorSecondaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/light_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">
            ?attr/colorPrimary
        </item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>

        <!-- Removing ripple effect -->
        <item name="android:selectableItemBackground">@null</item>
        <item name="android:selectableItemBackgroundBorderless">@null</item>

        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButton</item>

    </style>

    <!-- Custom themes for certain views. -->
    <style name="Widget.AppCompat.Light.SearchView.MySearchView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>

        <!--<item name="searchHintIcon">@null</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@null</item>
        <item name="queryHint">Find company or ticker</item>-->
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <!--<item name="tabGravity">start</item>
        <item name="tabMode">scrollable</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextColor">@color/tab_color_selector</item>
        <item name="tabTextAppearance">@style/MediumText</item>-->
    </style>

    <style name="SelectedTab" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="MediumText">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LittleText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ToolbarNavigationButton" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <!-- Replace your toolbar styles there later. -->
    </style>


    <style name="Theme.EntranceProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EntranceProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>